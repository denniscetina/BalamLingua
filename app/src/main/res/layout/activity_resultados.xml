<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityResultados">

    <TextView
        android:id="@+id/seccionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Completaste esta sección!"
        android:textAlignment="center"
        android:fontFamily="@font/feather"
        android:textColor="@color/colorCafe"
        android:layout_margin="24dp"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/balamResultados"
        android:layout_width="224dp"
        android:layout_height="224dp"
        app:srcCompat="@drawable/balamfeliz"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="122dp"
            android:layout_height="82dp"
            android:layout_marginRight="24dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/feather"
                    android:gravity="center"
                    android:text="Tiempo"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/TiempoTransc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/feather"
                    android:text="3:00"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="122dp"
            android:layout_height="82dp"
            android:layout_marginLeft="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/feather"
                    android:gravity="center"
                    android:text="Puntuación"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/progresoFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/feather"
                    android:text="90%"
                    android:textAlignment="center"
                    android:textColor="#1C4AB0"
                    android:textSize="18dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


        </LinearLayout>

