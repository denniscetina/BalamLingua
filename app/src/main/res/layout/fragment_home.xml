<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#F5F5F6"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="23dp"
                android:elevation="12dp"
                android:id="@+id/btnSaludos"
                >
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="wrap_content"
                        android:layout_height="117dp"
                        android:layout_marginLeft="22dp"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/saludos"></com.airbnb.lottie.LottieAnimationView>

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textColor="@color/colorCafe"
                        android:fontFamily="@font/feather"
                        android:text="Saludos" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="23dp"
                android:elevation="12dp">
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="214dp"
                        android:layout_height="117dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/tiempos2"></com.airbnb.lottie.LottieAnimationView>

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textColor="@color/colorCafe"
                        android:fontFamily="@font/feather"
                        android:text="Tiempos" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="23dp"
                android:elevation="12dp">
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="190dp"
                        android:layout_height="132dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/numbers"></com.airbnb.lottie.LottieAnimationView>

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textColor="@color/colorCafe"
                        android:fontFamily="@font/feather"
                        android:text="NÃºmeros" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>












</LinearLayout>